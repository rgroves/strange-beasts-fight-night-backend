{
  "name": "empty",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "start": "ts-node src/worker.ts",
    "start.watch": "nodemon src/worker.ts",
    "server:dev": "DEBUG=giant-monster-brawl:*, nodemon src/server/app.ts",
    "test": "mocha --exit --require ts-node/register --require source-map-support/register src/mocha/*.test.ts",
    "temporal:dev": "temporal server start-dev --ui-port 8080"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@temporalio/activity": "^1.11.6",
    "@temporalio/client": "^1.11.6",
    "@temporalio/worker": "^1.11.6",
    "@temporalio/workflow": "^1.11.6",
    "debug": "^4.4.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "nanoid": "3.x",
    "openai": "^4.98.0"
  },
  "devDependencies": {
    "@temporalio/testing": "^1.11.6",
    "@tsconfig/node18": "^18.2.4",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/mocha": "8.x",
    "@types/node": "^22.9.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "mocha": "8.x",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
